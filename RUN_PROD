# appID matters if you want to process from beginning..

docker container run -d --restart unless-stopped \
 --name pdat-dashboard \
 -e RACEDAY_TOPIC=prod.unstructured.binary.cooked,prod.unstructured.csv.cooked,prod.unstructured.text.cooked,prod.unstructured.logs.cooked,prod.unstructured.json.cooked,prod.timeseries.merged-daqlog.raw \
 -e UPSERT_URL=http://atlraceprd05:30000/teams/create \
 -e RETRIEVE_URL=http://atlraceprd05:30000/teams/retrieve \
 -e FETCH_URL=http://atlraceprd05:30000/teams/listinfo \
 -e KAFKA_BROKERS=atlraceprd01.amd.com:9092,atlraceprd02.amd.com:9092,atlraceprd03.amd.com:9092 \
 -e FROMBEGIN=1 \
 -e APPID=pdat-dashboard \
 sppogit.amd.com:5005/rparanjo/guid-ticker-api:dashboard


